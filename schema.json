{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sweepa Configuration Schema",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "ignoreIssues": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "ignoreDependencies": {
      "type": "array",
      "items": { "type": "string" }
    },
    "ignoreUnresolved": {
      "type": "array",
      "items": { "type": "string" }
    },
    "unusedExported": {
      "type": "string",
      "enum": ["off", "barrels", "all"]
    },
    "unusedExportedIgnoreGenerated": {
      "type": "boolean"
    },
    "workspaces": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#"
      }
    }
  }
}

